{
  "name": "Numeric Grades",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Popmundo Numeric Grades",
  "homepage_url": "https://github.com/behcet-li/numericgrades",
  "icons": {
    "16": "icons/icon16.png"
  },
  "applications": {
    "gecko": {
      "id": "numericgrades@dolm.us",
      "strict_min_version": "45.0.0"
    }
  },
  "default_locale": "en",
  "background": {
    "scripts": [ "js/eventPage.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Numeric Grades",
    "default_popup": "src/page_action/page_action.html"
  },
  "options_ui": {
    "page": "/src/page_action/page_action.html",
    "chrome_style": true
  },
  "permissions": [
    "*://*.popmundo.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://popmundo.com/*",
        "http://popmundo.com/*",
        "https://*.popmundo.com/*",
        "http://*.popmundo.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    },
    {
      "matches": [
        "https://popmundo.com/*",
        "http://popmundo.com/*",
        "https://*.popmundo.com/*",
        "http://*.popmundo.com/*"
      ],
       "js": [
         "lib/favico-0.3.10.min.js",
         "src/inject/notifications.js"
       ]
    }
	],
	"web_accessible_resources": [
    "/src/inject/menuNotifications.js"
	]
}
