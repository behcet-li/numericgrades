{
  "name": "Numeric Grades",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Popmundo Numeric Grades",
  "homepage_url": "https://github.com/behcet-li/numericgrades",
  "icons": {
    "16": "icons/icon16.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [ "js/eventPage.js" ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Numeric Grades",
    "default_popup": "src/page_action/page_action.html"
  },
  "options_ui": {
    "page": "/src/page_action/page_action.html",
    "chrome_style": true
  },
  "permissions": [
    "*://*.popmundo.com/*",
    "declarativeContent",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://popmundo.com/*",
        "http://popmundo.com/*",
        "https://*.popmundo.com/*",
        "http://*.popmundo.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
